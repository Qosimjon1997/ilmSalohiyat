@model ilmSalohiyat.Areas.Manager.ViewModels.Galary.GalaryViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="alert alert-danger">
    <h3>Вы уверены, что хотите удалить это?</h3>
</div>
<div class="card">
    <div class="card-header">
        <h3 class="text-uppercase">Удалить изображение</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                Имя изображение
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                Изображение
            </dt>
            <dd class="col-sm-10">
                <img src="~/img/@Model.ExistingImage" class="img-thumbnail" height="100" width="100" asp-append-version="true" />
            </dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-sm btn-danger rounded-0"><i class="fa fa-trash-alt"></i> Удалить</button>
            <a asp-area="manager" asp-controller="Galleries" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-info rounded-0"><i class="fa fa-pencil-alt"></i>Редактировать</a>
            <a asp-area="manager" asp-controller="Galleries" asp-action="Index" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-fast-backward"></i>Назад</a>
        </form>
    </div>
</div>