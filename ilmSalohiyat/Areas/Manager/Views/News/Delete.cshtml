@model ilmSalohiyat.Models.News

@{
    ViewData["Title"] = "Delete";
}

<div class="alert alert-danger">
    <h3>Вы уверены, что хотите удалить это?</h3>
</div>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название новости : 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Краткое содержание : 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Полный текст : 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Comment)
        </dd>
        <dt class="col-sm-2">
            Введите дату : 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PostTime)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-sm btn-danger rounded-0"><i class="fa fa-trash-alt"></i>Удалить</button>
        <a asp-area="manager" asp-controller="News" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-info rounded-0"><i class="fa fa-pencil-alt"></i>Редактировать</a>
        <a asp-area="manager" asp-controller="News" asp-action="Index" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-fast-backward"></i>Назад</a>
    </form>
</div>
