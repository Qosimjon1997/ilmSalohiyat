@model ilmSalohiyat.Models.Course

@{
    ViewData["Title"] = "Details";
}

<h2 class="text-center text-uppercase">Курс</h2>
<div class="card">
    <div class="card-header">
        <h3 class="text-uppercase">Подробная информация</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                Название курса
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                Цена
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                Описание
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Comment)
            </dd>
            <dt class="col-sm-2">
                Изображение
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ImageURL)
            </dd>
        </dl>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> |
            <a asp-action="Index">Назад</a>
        </div>
    </div>
</div>